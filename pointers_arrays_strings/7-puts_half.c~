#include "main.h"

/*
* puts_half - print the half of the string
* @str: pointer
* Return: half string
*/

void puts_half(char *str)
{
char *ptr = str;
/* limite a droite */ 
char *str1 = str;
/* pointe vers le debut */
/* manipule la chaine sans perdre valeur initiale */
while (*ptr != '\0')
ptr++;
/* deplace ptr jusqua null */
 str1 = str + ((ptr + str)/2);
 else
 str1 = str + ((ptr + str)/2) +1;
 _putchar(str1);
 str1++;
}
_putchar ("\n");
}
